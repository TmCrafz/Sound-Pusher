<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="timsterzel.de.soundpusher.OpenSharedSoundActivity"
    tools:showIn="@layout/activity_open_shared_sound">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_circle_fill_128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewPlaySound" />

    <android.support.design.widget.TextInputLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edTxtLayRecordName"
        android:textColorHint="@color/colorRecordDialogKeyContent"
        android:layout_below="@+id/imageViewPlaySound">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edTxtRecordName"
            android:hint="@string/txt_SoundName"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_save"
        android:id="@+id/btnSave"
        android:layout_below="@+id/edTxtLayRecordName"
        android:layout_toRightOf="@+id/imageViewPlaySound"
        android:layout_toEndOf="@+id/imageViewPlaySound" />


</RelativeLayout>